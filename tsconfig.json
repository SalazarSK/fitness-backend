{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types/sequelize", "./src/types/sequelize"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
